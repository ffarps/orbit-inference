# Include essential documentation and configuration files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py

# Include version file
include orbit_cli/__version__.py

# Include configuration files
include *.yaml
include *.yml
include *.json
include *.toml

# Include example and template files
recursive-include orbit_cli *.txt
recursive-include orbit_cli *.md
recursive-include orbit_cli *.yaml
recursive-include orbit_cli *.yml
recursive-include orbit_cli *.json
recursive-include orbit_cli *.toml

# Exclude development and testing files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude Makefile

# Exclude build artifacts and caches
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude test files
recursive-exclude tests *
recursive-exclude */tests *
exclude test_*.py
exclude *_test.py

# Exclude development directories
prune .git
prune .github
prune docs/_build
prune build
prune dist
prune .tox
prune .pytest_cache
prune .mypy_cache
prune .coverage 